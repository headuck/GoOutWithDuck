<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="ref" type="int"/>
    </data>

    <RelativeLayout
        android:id="@+id/checkin_list_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:behavior_hideable="false"
        app:behavior_peekHeight="@dimen/bottom_sheet_collapse_height"
        style="@style/BottomSheet.GoOutWithDuck"
        app:layout_behavior="@string/bottom_sheet_behavior"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/checkin_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:context="com.headuck.app.gooutwithduck.HomeActivity"
            tools:listitem="@layout/list_item_checkin_header"/>

    </RelativeLayout>
</layout>